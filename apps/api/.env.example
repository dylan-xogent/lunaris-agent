# Database Configuration
DATABASE_URL="postgresql://lunaris:lunaris@localhost:5432/lunaris_agent?schema=public"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=10000

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Agent Configuration
# Heartbeat interval in seconds (how often agents send heartbeats)
AGENT_HEARTBEAT_INTERVAL=30

# Offline threshold in seconds (when to mark an agent as offline)
# Should be >= 3x the heartbeat interval to account for network issues
AGENT_OFFLINE_THRESHOLD=90

# Number of retry attempts for failed heartbeats
AGENT_HEARTBEAT_RETRY_ATTEMPTS=3

# Delay between retry attempts in milliseconds
AGENT_HEARTBEAT_RETRY_DELAY=5000

# WebSocket Configuration
# Initial reconnection delay in milliseconds
WS_RECONNECT_DELAY=1000

# Maximum reconnection delay in milliseconds
WS_RECONNECT_MAX_DELAY=30000

# Backoff multiplier for exponential backoff
WS_RECONNECT_BACKOFF_MULTIPLIER=1.5

# Health Check Configuration
# Memory usage threshold for warning state (percentage)
HEALTH_CHECK_MEMORY_THRESHOLD_WARNING=75

# Memory usage threshold for critical state (percentage)
HEALTH_CHECK_MEMORY_THRESHOLD_CRITICAL=90
